<% const errorMessage = locals.errorMessage || '' %> <% const formData =
locals.formData || {} %>

<!-- Page Title -->
<div class="page-title" data-aos="fade">
  <div class="heading">
    <div class="container">
      <div class="row d-flex justify-content-center text-center">
        <div class="col-lg-8">
          <h1>Create Event</h1>
          <p class="mb-0">
            Fill out the form below to create a new event.
          </p>
        </div>
      </div>
    </div>
  </div>
  <nav class="breadcrumbs">
    <div class="container">
      <ol>
        <li><a href="/">Home</a></li>
        <li class="current">Create Event</li>
      </ol>
    </div>
  </nav>
</div>
<!-- End Page Title -->

<!-- Event Section -->
<section id="contact" class="course creation section">

  <div class="container" data-aos="fade-up" data-aos-delay="100">
    <div class="row gy-4">

      <div class="col-lg-8">
        <form
          action="/events/create-event"
          method="post"
          enctype="multipart/form-data"
          data-aos="fade-up"
          data-aos-delay="200"
        >
          <div class="row gy-4">
            <div class="col-md-6">
              <input
                type="text"
                name="title"
                class="form-control"
                placeholder="Event Title"
                id="name"
                required
                value="<%= formData.title || '' %>"
              />
            </div>

            <div class="col-md-6">
              <input
                type="text"
                class="form-control"
                name="summary"
                placeholder="Event Summary"
                id="summary"
                required
                value="<%= formData.summary || '' %>"
              />
            </div>

            <div class="col-md-12">
              <input
                type="date"
                class="form-control"
                name="date"
                placeholder="Event Date"
                id="date"
                required
                value="<%= formData.date || '' %>"
              />
            </div>

            <div class="form-control">
                <label for="image">Image</label>
                <input 
                    type="file" 
                    name="image" 
                    id="image" >
            </div>


            <div class="col-md-12 text-center">
              <div class="loading">Loading</div>
              <% if (errorMessage) { %>
              <div class="error-message" style="display: block">
                <%= errorMessage %>
              </div>
              <% } %>
              
              <button type="submit">Create Event</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>
