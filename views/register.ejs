<% const errorMessage = locals.errorMessage || '' %> <% const formData =
locals.formData || {} %>

<!-- Page Title -->
<div class="page-title" data-aos="fade">
  <div class="heading">
    <div class="container">
      <div class="row d-flex justify-content-center text-center">
        <div class="col-lg-8">
          <h1>Register for a Course</h1>
        </div>
      </div>
    </div>
  </div>
  <nav class="breadcrumbs">
    <div class="container">
      <ol>
        <li><a href="/">Home</a></li>
        <li class="current">Register</li>
      </ol>
    </div>
  </nav>
</div>
<!-- End Page Title -->

<!-- Contact Section -->
<section id="contact" class="contact section">

  <div class="container" data-aos="fade-up" data-aos-delay="100">
    <div class="row gy-4">

      <div class="col-lg-8">
        <form
          action="/courses/register/<%= course._id %>"
          method="post"
          data-aos="fade-up"
          data-aos-delay="200"
        >
          <div class="row gy-4">
            <div class="col-md-6">
              <input
                type="text"
                name="name"
                class="form-control"
                placeholder="<%= user.firstName %> <%= user.lastName %>"
                id="name"
                readonly
                required
                value="<%= formData.name || '' %>"
              />
            </div>

            <div class="col-md-6">
              <input
                type="email"
                class="form-control"
                name="email"
                placeholder="<%= user.email %>"
                id="email"
                required
                readonly
                value="<%= formData.email || '' %>"
              />
            </div>

            <div class="col-md-12">
                <label for="course">Select a Course:</label>
                <select class="form-control" id="course" name="courseId">
                    <% courses.forEach((c) => { %>
                        <option value="<%= c._id %>" <%= c._id.toString() === course._id.toString() ? 'selected' : '' %>>
                            <%= c.title %>
                        </option>
                    <% }) %>
                </select>
            </div>

            <div class="col-md-12 text-center">
              <% if (errorMessage) { %>
              <div class="error-message" style="display: block">
                <%= errorMessage %>
              </div>
              <% } %>
              <button type="submit">Register</button>
            </div>
          </div>
        </form>
      </div>
      <!-- End Contact Form -->
    </div>
  </div>
</section>
<!-- /Contact Section -->
